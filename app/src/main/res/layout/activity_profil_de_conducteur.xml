<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil_de_conducteurActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="190dp"
        android:layout_height="118dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/m1" />

    <TextView
        android:id="@+id/fiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="La fiche personnel"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="32dp" />

    <Button
        android:id="@+id/publier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fiche"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_bakground"
        android:enabled="true"
        android:text="publier trajet" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verifier"
        android:text="vÃ©rifier l'intervale d'embraquement"
        android:enabled="true"
        android:background="@drawable/btn_bakground"
        android:layout_below="@+id/publier"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/consulter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verifier"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bakground"
        android:enabled="true"
        android:text="consulter historique" />

</LinearLayout>


