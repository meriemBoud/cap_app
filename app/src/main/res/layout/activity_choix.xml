<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choixActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image2"
        android:layout_width="198dp"
        android:layout_height="92dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:src="@drawable/m1" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="143dp"
        android:layout_height="53dp"
        android:autoSizeMaxTextSize="@android:dimen/dialog_min_width_major"
        android:text="choisit"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/conducteur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:background="@drawable/btn_bakground"
        android:text="je suis un conducteur"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>
    <Button
        android:id="@+id/passager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conducteur"
        android:background="@drawable/btn_bakground"
        android:text="je suis un passager"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>



</LinearLayout>